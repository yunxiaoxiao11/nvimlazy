" set Leader key
nnoremap <SPACE> <Nop>
vnoremap <SPACE> <Nop>
let mapleader=" "
set timeoutlen=800

" search
set hls "hlsearch
set is "incsearch
set scs "smartcase
set ic "ignorecase
nnoremap <Leader>sc :set scs!<CR>
nnoremap <Leader>ic :set ic!<CR>
nnoremap <ESC> <ESC>:noh<CR>
vnoremap <ESC> <ESC>:noh<CR>
nnoremap <Leader>/ /<C-R>"<CR>

" other
set showmode
set laststatus=2
set scrolloff=5
set showcmd
set nu
set rnu "relativenumber
nnoremap <Leader>nu :set nu!<CR>
nnoremap <Leader>rnu :set rnu!<CR>
vnoremap _ :b#<CR>
nnoremap _ :b#<CR>

